<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="60dp"
        android:text="Developed by JpVargas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSegundoNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Second Number"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextPrimerNumero"
        app:layout_constraintStart_toStartOf="@+id/editTextPrimerNumero"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrimerNumero" />

    <EditText
        android:id="@+id/editTextPrimerNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="First Number"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calculator_technology_svgrepo_com" />

    <Button
        android:id="@+id/sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="50dp"
        android:text="+ Suma"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextSegundoNumero"
        app:layout_constraintStart_toStartOf="@+id/editTextSegundoNumero"
        app:layout_constraintTop_toBottomOf="@+id/editTextSegundoNumero" />

    <Button
        android:id="@+id/restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="- Resta"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sumar"
        app:layout_constraintStart_toStartOf="@+id/sumar"
        app:layout_constraintTop_toBottomOf="@+id/sumar" />

    <Button
        android:id="@+id/multiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="x Multiplica"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/dividir"
        app:layout_constraintStart_toStartOf="@+id/dividir"
        app:layout_constraintTop_toBottomOf="@+id/dividir" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="/ Divide"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/restar"
        app:layout_constraintStart_toStartOf="@+id/restar"
        app:layout_constraintTop_toBottomOf="@+id/restar" />

</androidx.constraintlayout.widget.ConstraintLayout>